check process bind with pidfile /var/run/named/named.pid
  start program = "/usr/sbin/service bind9 start"
  stop program  = "/usr/sbin/service bind9 stop"
  if failed port 53 type udp protocol dns with timeout 15 seconds for 3 cycles then restart
  if failed port 53 type tcp protocol dns with timeout 15 seconds for 3 cycles then restart
  if 3 restarts within 5 cycles then timeout
