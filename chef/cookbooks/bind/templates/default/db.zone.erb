$TTL 10s
$ORIGIN <%= @zone %>.
@ IN SOA ns.<%= @zone %>. root.<%= node[:fqdn] %>. (
  <%= File.mtime("/etc/bind/db.#{zone}").to_i rescue Time.new.to_i %> ; Serial
  10s ; Refresh
  10s ; Retry
  10s ; Expire
  10s ; Minimum
)
@ IN NS ns.<%= @zone %>.
ns IN A <%= node[:ipaddress] %>
@ IN A <%= node[:ipaddress] %>
<%= @records.sort.join("\n") %>
